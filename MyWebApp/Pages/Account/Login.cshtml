@page
@model MyWebApp.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <form method="post">
        <div class="form-group">
            <label for="email">Email: *</label>
            <input type="email" class="form-control" name="email" id="email" required>
        </div>
        <div class="form-group">
            <label for="password">Password: *</label>
            <input type="password" class="form-control" name="password" id="password" required>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="remember" value="true" id="persistentCheck" checked>
            <label class="form-check-label" for="persistentCheck">Remember me for a week.</label>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
